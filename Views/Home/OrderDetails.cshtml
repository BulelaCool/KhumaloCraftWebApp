@model List<KhumaloCraftWebApp.Models.Order>

@{
    ViewData["Title"] = "Order Details";
}

<h2 class="display-4 text-boxOrder">Order Details</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped OrderTable">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Item</th>
                <th>Description</th>
                <th>Category</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.ProductID</td>
                    <td>@order.Item</td>
                    <td>@order.Description</td>
                    <td>@order.Category</td>
                    <td>@order.Availability</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}